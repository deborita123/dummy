<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/btn_doctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Doctor list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_doctor" />

    <Button
        android:id="@+id/btn_medicine"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="medicine list"
        app:layout_constraintEnd_toEndOf="@+id/btn_doctor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_doctor"
        tools:layout_editor_absoluteY="273dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_medicine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_medicine" />

    <Button
        android:id="@+id/btn_labtest"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="Labtest list"
        app:layout_constraintEnd_toEndOf="@+id/btn_medicine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_medicine"
        tools:layout_editor_absoluteY="546dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lab"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_labtest" />

</androidx.constraintlayout.widget.ConstraintLayout>